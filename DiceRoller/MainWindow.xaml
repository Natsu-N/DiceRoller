<Window x:Class="DiceRoller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRoller"
        xmlns:vm="clr-namespace:DiceRoller.VewModel;assembly=DiceRoller.VewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Window.DataContext>
        <vm:DiceRollViewModel/>
    </Window.DataContext>
    <Grid ShowGridLines="True">
        <Grid.Resources>
            <Style x:Key="CommonStyle">
                <Setter Property="Control.Margin" Value="10"></Setter>
                <Setter Property="Control.Padding" Value="10"></Setter>
                <Setter Property="Control.HorizontalAlignment" Value="Stretch"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Style="{StaticResource CommonStyle}" Command="{Binding RollCommand}">Roll</Button>
        <ListBox Grid.Row="0"  ItemsSource="{Binding itemDiceList}" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"></UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition ></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding name}"></TextBlock>
                        <TextBox Grid.Row="1" Text="{Binding Path=diceNumber}"></TextBox>
                        <ScrollViewer  Grid.Row="2">
                            <TextBlock Text="{Binding Path=result}"></TextBlock>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
