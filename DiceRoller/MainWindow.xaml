<Window x:Class="DiceRoller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRoller"
        xmlns:vm="clr-namespace:DiceRoller.VewModel;assembly=DiceRoller.VewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="675">
    <Window.DataContext>
        <vm:DiceRollViewModel/>
    </Window.DataContext>
    <Grid ShowGridLines="True">
        <Grid.Resources>
            <Style x:Key="CommonStyle">
                <Setter Property="Control.Margin" Value="10"></Setter>
                <Setter Property="Control.Padding" Value="10"></Setter>
                <Setter Property="Control.HorizontalAlignment" Value="Stretch"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column ="0" Style="{StaticResource CommonStyle}">Type of dice</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="1" Style="{StaticResource CommonStyle}">D4</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="2" Style="{StaticResource CommonStyle}">D6</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="3" Style="{StaticResource CommonStyle}">D8</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="4" Style="{StaticResource CommonStyle}">D10</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="5" Style="{StaticResource CommonStyle}">D12</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="6" Style="{StaticResource CommonStyle}">D20</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column ="7" Style="{StaticResource CommonStyle}">D100</TextBlock>

        <TextBlock Grid.Row="1" Style="{StaticResource CommonStyle}">Number of dice</TextBlock>
        <TextBox Grid.Row="1" Grid.Column ="1" Style="{StaticResource CommonStyle}" Text="{Binding Dice4Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="2" Style="{StaticResource CommonStyle}" Text="{Binding Dice6Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="3" Style="{StaticResource CommonStyle}" Text="{Binding Dice8Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="4" Style="{StaticResource CommonStyle}" Text="{Binding Dice10Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="5" Style="{StaticResource CommonStyle}" Text="{Binding Dice12Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="6" Style="{StaticResource CommonStyle}" Text="{Binding Dice20Number}"></TextBox>
        <TextBox Grid.Row="1" Grid.Column ="7" Style="{StaticResource CommonStyle}" Text="{Binding Dice100Number}"></TextBox>

        <Button Grid.Row="2" Style="{StaticResource CommonStyle}">Roll</Button>
        <TextBlock Grid.Row="2" Grid.Column ="1" Style="{StaticResource CommonStyle}" Text="{Binding Dice4Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="2" Style="{StaticResource CommonStyle}" Text="{Binding Dice6Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="3" Style="{StaticResource CommonStyle}" Text="{Binding Dice8Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="4" Style="{StaticResource CommonStyle}" Text="{Binding Dice10Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="5" Style="{StaticResource CommonStyle}" Text="{Binding Dice12Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="6" Style="{StaticResource CommonStyle}" Text="{Binding Dice20Result}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column ="7" Style="{StaticResource CommonStyle}" Text="{Binding Dice100Result}"></TextBlock>
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="8" Style="{StaticResource CommonStyle}">Clear all</Button>

    </Grid>
</Window>
